<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Styles/StylesFloridaBike.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-static-top" style="background-color:black" id="menu">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img id="logofloridaBike" src="~/Assets/Logos-Mesa_de_trabajo_1_175x.jpg" />
            </div>
            <div class="navbar-collapse collapse" id="menuBusqueda" style="margin-top:6%;">

            </div>



        </div>
        <div class="row" style="float:right; margin-top:-50px; margin-right:40px; display:flex; align-items:flex-end; margin-bottom:-50px">
            <form action="@Url.Content("~/Login")" method="post">
                <div class="form-group float-right">
                    <label style="color:white">Usuario</label>
                    <input type="email" name="User" />
                    <label style="color:white">Passwword</label>
                    <input type="password" name="Password" />
                </div>
                <div class="form-group" style="float:right; margin-right:40px;">
                    <input type="button" value="Entrar" class="btn btn-success"/>
                </div>
            </form>
        </div>

    </div>
    <div  id="menuTitulos" class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">

            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("BICICLETAS", "Index", "Home")</li>
                <li>@Html.ActionLink("ACCESORIOS", "Index", "Home")</li>
                <li>@Html.ActionLink("INDUMENTARIO", "Index", "Home")</li>
                <li>@Html.ActionLink("MARCA", "Index", "Home")</li>
                <li>@Html.ActionLink("TEST", "Index", "Home")</li>
                <li>@Html.ActionLink("CONTACTO", "Index", "Home")</li>
                <li>@Html.ActionLink("NUEVO PROPIETARIO", "NuevoPropietario", "Propietario")</li>
            </ul>
        </div>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/script")
    @RenderSection("scripts", required: false)
</body>
</html>
